# SPDX-License-Identifier: BSD-2-Clause

pkgname=ymerge
pkgver="0.0.3"
pkgrel=1
pkgdesc="A Source-Based Package Manager for Arch Linux."
arch=(x86_64)
url="https://github.com/flying-dude/ymerge/"
license=(BSD)
depends=(fmt git abseil-cpp)
makedepends=(cmake fmt nlohmann-json ninja gtest)
provides=(ymerge)

source=(
    "https://github.com/flying-dude/ymerge/archive/refs/tags/${pkgver}.zip"
    "https://github.com/Jorengarenar/libXDGdirs/archive/84ab4117b787c4079965c98b4578a38b63795cc0.zip"
)

b2sums=('2dbaaab93c363c05635d771bcaf9bc04231ab6d04918b520f59c79d1f6f18264411ddaac8dc73426e973669229705e616be988d1029c2697726ff469c811e1fc'
        '816f464b468ce668cb3bf4e869e683c045a8083ec43f020df2096189a408890e41b3ec7a26b72f06cf16ed31883228f810385968162baa5c87b61cdbe37004ff')

build() {
    cp --no-target-directory --recursive libXDGdirs-* ymerge-*/src/submodules/libxdgdirs/
    cd ymerge-*
    cmake -S . -B build -GNinja -DCMAKE_BUILD_TYPE=Release -DCMAKE_SKIP_RPATH=On -DYMERGE_VERSION="${pkgver}"
    cmake --build build
}

package() {
    cd ymerge-*/build/
    mkdir --parents ${pkgdir}/usr/lib; cp libyoutil.so ${pkgdir}/usr/lib
    mkdir --parents ${pkgdir}/usr/bin; cp ymerge ${pkgdir}/usr/bin

    mkdir --parents ${pkgdir}/usr/lib; cp libauracle.so ${pkgdir}/usr/lib
    mkdir --parents ${pkgdir}/usr/bin; cp auracle ${pkgdir}/usr/bin
}
